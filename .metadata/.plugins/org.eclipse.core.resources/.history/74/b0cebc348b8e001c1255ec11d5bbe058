package es.pildoras.IoC;

import org.springframework.context.support.ClassPathXmlApplicationContext;

public class UsoDemoSingletonPrototype {

	public static void main(String[] args) {

		//Cargamos el archivo xml de configuracion
		ClassPathXmlApplicationContext contexto = new ClassPathXmlApplicationContext("applicationContext2.xml");
		
		
		//peticion de beans al contenedor Spring
		
		DirectorEmpleado Maria= contexto.getBean("miSecretarioEmpleado",DirectorEmpleado.class);

		DirectorEmpleado Pedro= contexto.getBean("miSecretarioEmpleado",DirectorEmpleado.class);

		System.out.println(Maria);
		
		System.out.println(Pedro);

	}

}
